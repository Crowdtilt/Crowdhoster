<div id="share_buttons">
  <div class="like col-sm-4">
  	<div class="fb-like" data-href="<%= url_for campaign_home_url(@campaign) %>" data-width="70px" data-layout="button_count" data-action="like" data-show-faces="false" data-share="false">
  	</div>
  </div>
  <div class="tweet col-sm-4">
  	<a href="https://twitter.com/share" class="twitter-share-button" data-url="<%= url_for campaign_home_url(@campaign) %>" data-text="<%= @campaign.tweet_text.blank? ? @settings.site_name : @campaign.tweet_text %>">Tweet</a>
  </div>
  <div class="pin col-sm-4">
  	<a href="//pinterest.com/pin/create/button/" target="_blank" data-pin-do="buttonBookmark" ><img src="//assets.pinterest.com/images/pidgets/pin_it_button.png" /></a>
  </div>
</div>