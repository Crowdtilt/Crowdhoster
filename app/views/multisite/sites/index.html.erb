<div class="tabble tabs-left">
  <ul class="nav nav-tabs">
    <% @sites.each do |site| %>
      <li class="<%= 'active' if @site_id == site.id %>"><%= link_to site.site_name, "##{site.subdomain}", 'data-toggle' => 'tab' %></li>
    <% end %>
  </ul>
  <div class="tab-content">
    <% @sites.each do |site| %>
      <div class="tab-pane <%= 'active' if @site_id == site.id %>" id="<%= site.subdomain %>">
        <h1><%= link_to site.site_name, custom_url(site) %></h1>
        <%= form_for(site, url: multisite_site_path(site), multipart: true, html: { id: "admin_website_form" }) do |f| %>

        <fieldset>
        <legend>Custom domains</legend>
        <p class="explanation">Your site is located at <strong><%= site.subdomain %>.crowdhoster.com</strong><% if site.custom_domain %> and <strong><%= site.custom_domain %></strong><% end %>.</p>


        <div class="field clearfix">
          <label>Subdomain</label>
          <%= f.text_field :subdomain %>.crowdhoster.com
          <span class="help-block">Subdomains must be at least 3 characters long and can include letters, numbers, and hyphens.</span> 
        </div>

        <div class="field clearfix">
          <label>Custom Domain</label>
          <%= f.text_field :custom_domain %>
          <span class="help-block">Custom domains should have a CNAME pointing to the subdomain above.</span> 
        </div>
        </fieldset>

        <%= f.submit "Save", :'class' => "btn btn-primary show_loader", :'data-loader' => "project_form" %>
        <span class="loader" data-loader="project_form" style="display:none"></span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
