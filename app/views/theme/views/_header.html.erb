<div id="header">
  <div class="row">
  <div class="container large-3 small-centered-columns">
    <% if @settings.logo_image.file? %>

      <a href="/"><%= image_tag @settings.logo_image.url, alt: "logo" %></a>

    <% else %>

      <h1><a href="/">bootcamp.me</a></h1>

    <% end %>

    <% if !@settings.header_link_text.blank? && !@settings.header_link_url.blank? %>
    <div class="header_link">
      <a href="<%= @settings.header_link_url %>" target="_blank" class="btn"><%= @settings.header_link_text %></a>
    </div>
    <% end %>

  </div>
  </div>
</div>